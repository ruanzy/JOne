<?xml version="1.0" encoding="UTF-8"?>
<configuration>
	<appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
		<encoder>
			<pattern>%d{yyyy-MM-dd HH:mm:ss.SSS} %msg%n
			</pattern>
		</encoder>
	</appender>
	<appender name="FILE"
		class="ch.qos.logback.core.rolling.RollingFileAppender">
		<file>${catalina.home}/logs/JOne/JOne.log</file>
		<rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
			<fileNamePattern>JOne-%d{yyyy-MM-dd}.log</fileNamePattern>
			<maxHistory>30</maxHistory>
		</rollingPolicy>
		<encoder>
			<pattern>%d{yyyy-MM-dd HH:mm:ss.SSS} %msg%n</pattern>
		</encoder>
	</appender>
	
	<appender name="txt" class="log.TxtAppender">
		<file>logs/JOne.txt</file>
		<encoder>
			<pattern>%msg%n</pattern>
		</encoder>
	</appender>
	
	<appender name="MONGO" class="org.rzy.web.log.MongoAppender">
	    <host>127.0.0.1</host>
	    <db>JOne</db>
	    <collection>logs</collection> 
	</appender>
	
	<appender name="MONGO2" class="org.rzy.web.log.MongoAppender">
	    <host>127.0.0.1</host>
	    <db>JOne</db>
	    <collection>jvm</collection> 
	</appender>
	
	<logger name="org.rzy.web.WebUtil" level="DEBUG" additivity="false">  
        <appender-ref ref="MONGO"/>  
    </logger>  
    
    <logger name="org.rzy.web.JvmMonitor" level="DEBUG" additivity="false">  
        <appender-ref ref="MONGO2"/>  
    </logger>  
	
	<root level="DEBUG">
		<appender-ref ref="STDOUT" />
		<appender-ref ref="FILE" />
	</root>
</configuration>