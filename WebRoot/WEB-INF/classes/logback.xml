<?xml version="1.0" encoding="UTF-8"?>
<configuration>
	<appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
		<encoder>
			<pattern>%d{yyyy-MM-dd HH:mm:ss.SSS} %msg%n
			</pattern>
		</encoder>
	</appender>
	<appender name="FILE"
		class="ch.qos.logback.core.rolling.RollingFileAppender">
		<file>${logDir}/JOne.log</file>
		<rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
			<fileNamePattern>JOne-%d{yyyy-MM-dd}.log</fileNamePattern>
			<maxHistory>30</maxHistory>
		</rollingPolicy>
		<encoder>
			<pattern>%d{yyyy-MM-dd HH:mm:ss.SSS} %msg%n</pattern>
		</encoder>
	</appender>
	
	<appender name="MONGO" class="log.LogMongoAppender">
	    <collection>logs</collection> 
	</appender>
	
	<appender name="MONGO2" class="log.JvmMongoAppender">
	    <collection>jvm</collection> 
	</appender>
	
	<appender name="MONGO3" class="log.LoginMongoAppender">
	    <collection>login</collection> 
	</appender>
	
	<logger name="org.rzy.web.WebUtil" level="DEBUG" additivity="false">  
        <appender-ref ref="MONGO"/>  
    </logger>  
    
    <logger name="task.JvmMonitor" level="DEBUG" additivity="false">  
        <appender-ref ref="MONGO2"/>  
    </logger>
    
    <logger name="action.Login" level="DEBUG" additivity="false">  
        <appender-ref ref="MONGO3"/>  
    </logger>
	
	<root level="DEBUG">
		<appender-ref ref="STDOUT" />
		<appender-ref ref="FILE" />
	</root>
</configuration>