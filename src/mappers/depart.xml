<?xml version="1.0" encoding="UTF-8"?>
<sqls>
	<sql id='count'>
		select count(*) from depart
		<where>
			<if test="name != null and name != ''">
				and name like CONCAT('%',#{name},'%')
			</if>
		</where>
	</sql>
	<sql id='selectAll'>
		select * from depart
		<where>
			<if test="name != null and name != ''">
				and name like CONCAT('%',#{name},'%')
			</if>
		</where>
		order by id desc
	</sql>
	<sql id='add'>
		insert into depart(id,name,memo) values(#{id},#{name},#{memo})
	</sql>
</sqls>