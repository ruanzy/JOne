<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Strict//EN" "http://www.w3.org/2002/xmlspec/dtd/2.10/xmlspec.dtd">
<sqls>
	<sql id='count'>
		select count(*) from dic
		<where>
			<if test="type != null and type != ''">
				and type=#{type}
			</if>
		</where>
	</sql>
	<sql id='selectAll'>
		select * from dic
		<where>
			<if test="type != null and type != ''">
				and type=#{type}
			</if>
		</where>
	</sql>
</sqls>